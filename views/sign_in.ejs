<!doctype html>
<html lang="en">

<head>
    <meta charset='utf-8'>
    <title>Mingo</title>
    <!--bootstrap style-->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">
    <!--the site's main icon-->
    <link rel="shortcut icon" href="images/favicon.ico" type="image/x-icon">
    <!--icons-->
    <script src="https://kit.fontawesome.com/ba67446b69.js" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css" rel="stylesheet">
    <link href='https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css' rel='stylesheet'>
    <!-- fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;600;700&display=swap" rel="stylesheet">
    <!-- custom style -->
    <link rel="stylesheet" href="css/login.css">

</head>

<body>
    <main>
        <a class="site_logo">Mingo</a>
        <div class="login_cover py-5">
            <h4 class="mb-3">Sign In</h4>
            <form>
                <div class="row g-3">
                    <div class="col-12">
                        <label for="email" class="form-label">Email <span class="text-muted"></span></label>
                        <input type="email" class="form-control border" id="email" placeholder="you@example.com"
                            required autocomplete="off">
                    </div>

                    <div class="col-12">
                        <label for="password" class="form-label">passowrd <span class="text-muted"></span></label>
                        <input type="password" class="form-control border" id="password" placeholder="password"
                            required autocomplete="off">
                        <a href="#" class="nav-link m-auto d-flex flex-row-reverse">Forget Your Password ?</a>
                    </div>
                    <div class="form-check m-3 mb-2 mt-3 col-12">
                        <input type="checkbox" class="form-check-input" id="save-info">
                        <label class="form-check-label" for="save-info">Remmember Me</label>
                    </div>
                    <div class="col-12">
                        <button class=" btn btn-success col-6  btn-lg" type="submit">Sign In</button>
                    </div>
                    <p class="mt-3 col-12">You don't have an account ? <a href="SignUP.html">Sign up</a></p>
                    <div class="signinwith col-12">
                        <h5 class="d-inline">Sign in with</h5>
                        <a href="www.facebook.com"><i class="bi bi-facebook pl-3 social"></i></a>
                        <a href="www.facebook.com"><i class="bi bi-google pl-3 social"></i></a>
                    </div>
            </form>
        </div>
    </main>



    <!-- font awesome -->
    <script src="https://kit.fontawesome.com/b99e675b6e.js"></script>
    <!--JQuery-->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <!--bootstrap javascript-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>
    <!-- custom javascript -->
    <script src="../JS Files/searching.js"></script>

</body>

</html>