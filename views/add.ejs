<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Home page</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="">
</head>

<body>
    <div>
        <form action="/addProduct" method="post" enctype="multipart/form-data">
            <div>
                <label for="name">name of product</label>
                <input type="text" name="name" id="name" placeholder="name" required>
            </div>
            <div>
                <label for="price">Price of product</label>
                <input type="number" name="price" id="price" placeholder="price" required>
            </div>
            <div>
                <label>Catigory Of Products</label>
                <% catigories.forEach(catigory => { %>
                    <div class="form-check" id="catigory">
                        <input class="form-check-input" type="radio" name="catigory" value="<%= catigory %>" id="<%= catigory %>">
                        <label class="form-check-label" for="<%= catigory %>"><%= catigory %></label>
                    </div>
                <% }); %>
            </div>
            <div>
                <label for="description">Product Description</label>
                <textarea name="description" id="description" cols="" rows="2" placeholder="Description"
                    required></textarea>
            </div>
            <div>
                <label for="image">Upload Image</label>
                <input type="file" name="image" id="image" value="" required>
            </div>
            <div>
                <button type="submit">Submit</button>
            </div>
        </form>
    </div>


    <footer>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
            crossorigin="anonymous"></script>
    </footer>
</body>

</html>